# =============================================================================
# CONFIGURACIÓN FARMACIA, CLÍNICA Y LABORATORIO CLÍNICO
# =============================================================================
# Este archivo contiene las variables de entorno de ejemplo para el sistema
# Copie este archivo a .env y ajuste los valores según su entorno
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE APLICACIÓN
# -----------------------------------------------------------------------------
APP_NAME="Farmacia y Clínica"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8003

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE BASE DE DATOS (Docker)
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=farmacia_clinica
DB_USERNAME=farmacia_admin
DB_PASSWORD=farmacia_2024

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE CACHÉ Y SESIÓN
# -----------------------------------------------------------------------------
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_correo@gmail.com
MAIL_PASSWORD=tu_contraseña_app
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=tu_correo@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE FACTURACIÓN ELECTRÓNICA (El Salvador - DTE)
# -----------------------------------------------------------------------------
DTE_ENABLED=true
DTE_AMBIENTE=00
DTE_NIT=
DTE_NRC=
DTE_ESTABLECIMIENTO_CODIGO=
DTE_ESTABLECIMIENTO_PUNTO_VENTA=
DTE_USUARIO=
DTE_PASSWORD=
DTE_API_URL=https://apitest.dtes.mh.gob.sv/fesv/

# -----------------------------------------------------------------------------
# CONFIGURACIÓN ESPECÍFICA DE FARMACIA
# -----------------------------------------------------------------------------
FARMACIA_REGENTE_NOMBRE=
FARMACIA_REGENTE_JVPM=
FARMACIA_LICENCIA_SANITARIA=
FARMACIA_ALERTA_VENCIMIENTO_DIAS=90
FARMACIA_ALERTA_STOCK_MINIMO=true

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE CLÍNICA
# -----------------------------------------------------------------------------
CLINICA_NOMBRE_COMPLETO=
CLINICA_DIRECTOR_MEDICO=
CLINICA_LICENCIA_ESTABLECIMIENTO=
CLINICA_HORARIO_ATENCION="Lunes a Viernes 8:00 AM - 5:00 PM"

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LABORATORIO CLÍNICO
# -----------------------------------------------------------------------------
LABORATORIO_NOMBRE=
LABORATORIO_DIRECTOR_TECNICO=
LABORATORIO_LICENCIA=
LABORATORIO_TIEMPO_RESULTADOS_DIAS=3

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE INVENTARIO
# -----------------------------------------------------------------------------
INVENTARIO_METODO_VALUACION=promedio
INVENTARIO_REDONDEO_DECIMALES=4
INVENTARIO_ALERTAS_ACTIVAS=true
INVENTARIO_CONTROL_LOTES=true
INVENTARIO_CONTROL_VENCIMIENTO=true

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE REPORTES Y RESPALDOS
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE SEGURIDAD
# -----------------------------------------------------------------------------
SESSION_LIFETIME=480
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

PASSWORD_TIMEOUT=10800
PASSWORD_MIN_LENGTH=8

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE TIMEZONE
# -----------------------------------------------------------------------------
APP_TIMEZONE=America/El_Salvador
DB_TIMEZONE=+00:00

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LOGS
# -----------------------------------------------------------------------------
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAYS=14

# -----------------------------------------------------------------------------
# OTROS SERVICIOS
# -----------------------------------------------------------------------------
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE IMPRESORAS Y TICKETS
# -----------------------------------------------------------------------------
TICKET_PRINTER_ENABLED=true
TICKET_WIDTH=80
TICKET_LOGO_ENABLED=true
TICKET_FOOTER_TEXT="Gracias por su preferencia"

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE MÓDULOS ACTIVOS
# -----------------------------------------------------------------------------
MODULO_FARMACIA=true
MODULO_CLINICA=true
MODULO_LABORATORIO=true
MODULO_VENTAS=true
MODULO_COMPRAS=true
MODULO_INVENTARIO=true
MODULO_CLIENTES=true
MODULO_PROVEEDORES=true
MODULO_REPORTES=true
MODULO_DTE=true

