                                                                // Funci贸n SIMPLIFICADA: Imprime autom谩ticamente SIN opciones
        function imprimirTicketAutomatico(saleId) {
            console.log('锔 Imprimiendo ticket autom谩ticamente para venta #' + saleId);

            // Mostrar notificaci贸n de imprimiendo
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    title: 'Imprimiendo...',
                    icon: 'info',
                    timer: 1000,
                    showConfirmButton: false,
                    toast: true,
                    position: 'top-end'
                });
            }

            // Primero verificar si tiene DTE
            const checkDteUrl = '{{ route("sale.check-dte", ":id") }}'.replace(':id', saleId);

            fetch(checkDteUrl)
                .then(response => response.json())
                .then(dteData => {
                    const hasDte = dteData.hasDte;
                    console.log(' Venta tiene DTE:', hasDte);

                    // Intentar impresi贸n directa del servidor
                    const ticketPrintUrl = '{{ route("sale.ticket-print", ":id") }}'.replace(':id', saleId);

                    fetch(ticketPrintUrl)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                console.log(' Ticket impreso directamente');

                                if (typeof Swal !== 'undefined') {
                                    Swal.fire({
                                        title: hasDte ? ' 隆DTE Impreso!' : ' 隆Impreso!',
                                        icon: 'success',
                                        timer: 1500,
                                        showConfirmButton: false,
                                        toast: true,
                                        position: 'top-end'
                                    });
                                }
                            } else {
                                // Fallback: abrir ticket para imprimir en navegador
                                console.log('锔 Fallback a navegador');
                                const ticketUrl = '{{ route("sale.ticket", ":id") }}'.replace(':id', saleId);
                                window.open(ticketUrl, 'ticket_' + saleId, 'width=400,height=500,scrollbars=no,resizable=no,menubar=no,toolbar=no');
                            }
                        })
                        .catch(error => {
                            console.error(' Error:', error);
                            // Fallback: abrir ticket para imprimir en navegador
                            const ticketUrl = '{{ route("sale.ticket", ":id") }}'.replace(':id', saleId);
                            window.open(ticketUrl, 'ticket_' + saleId, 'width=400,height=500,scrollbars=no,resizable=no,menubar=no,toolbar=no');
                        });
                })
                .catch(error => {
                    console.error(' Error verificando DTE:', error);
                    // Si no se puede verificar DTE, usar ticket normal
                    const ticketUrl = '{{ route("sale.ticket", ":id") }}'.replace(':id', saleId);
                    window.open(ticketUrl, 'ticket_' + saleId, 'width=400,height=500,scrollbars=no,resizable=no,menubar=no,toolbar=no');
                });
        }



